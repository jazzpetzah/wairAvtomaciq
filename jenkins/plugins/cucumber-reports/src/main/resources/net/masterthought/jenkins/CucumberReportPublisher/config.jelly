<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson"
xmlns:f="/lib/form">
  <!--
    This jelly script is used for per-project configuration.

    See global.jelly for a general discussion about jelly script.
  -->

  <!--
    Creates a text field that shows the value of the "name" property.
    When submitted, it will be passed to the corresponding constructor parameter.
  -->
	<f:entry title="Custom Description" field="customDescription" description="Optional description">
		<f:textbox />
	</f:entry>
	<f:entry title="Coverage" field="coverage" description="Optional coverage">
		<f:textbox />
	</f:entry>
	<f:entry title="Real Build Number" field="realBuildNumber" description="Used to overwrite jenkins job build number in the report with a given number">
		<f:textbox />
	</f:entry>
  <f:advanced>
	<f:entry title="Json Reports Path" field="jsonReportDirectory" description="The path relative to the workspace of the json reports generated by cucumber-jvm e.g. target - leave empty to let the plugin find them automagically">
		<f:textbox />
    </f:entry>
    <f:entry title="Plugin Url Path" field="pluginUrlPath" description="The path to the jenkins user content url e.g. http://host:port[/jenkins/]plugin - leave empty if jenkins url root is host:port">
        <f:textbox />
	</f:entry>
	<f:entry title="Any Skipped Step Fail the Build" field="skippedFails" description="Tick this if you want skipped steps to cause the build to fail">
        <f:checkbox />
    </f:entry>
    <f:entry title="Any Pending Step Fail the Build" field="pendingFails" description="Tick this if you want pending steps to cause the build to fail">
        <f:checkbox />
    </f:entry>
    <f:entry title="Any Undefined Step Fail the Build" field="undefinedFails" description="Tick this if you want undefined steps to cause the build to fail">
        <f:checkbox />
    </f:entry>
	<f:entry title="The All Skipped Steps Fail the Build" field="allSkippedFails" description="Tick this if you want to fail build when the all steps are skipped">
        <f:checkbox />
    </f:entry>
    <f:entry title="On Empty Results Set Run Status - Not Built" field="markNotBuiltIfNoResults" description="Tick this if you
    want to mark report as 'Not built' if input json report contains no results">
        <f:checkbox />
    </f:entry>
	<f:entry title="Ignore failed tests" field="ignoreFailedTests" description="Tick this if you don't want the entire build to fail when these tests fail. If so, build becomes unstable">
		<f:checkbox />
	</f:entry>
	<f:entry title="Skipped steps have screenshots" field="skippedHaveScreenshots" description="Tick this if your tests generate screenshot files for skipped tests">
    		<f:checkbox />
    	</f:entry>
  </f:advanced>
</j:jelly>

