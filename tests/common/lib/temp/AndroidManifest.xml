<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.waz.zms">

    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- required for GCM !-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name=".permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name=".permission.C2D_MESSAGE" />

    <application>
        <service android:name="com.waz.zms.SyncService" />
        <service android:name="com.waz.zms.CallService" android:exported="true" />
        <service android:name="com.waz.zms.GcmNotifierService" />
        <service android:name="com.waz.zms.UpdateService" />

        <receiver android:name="com.waz.zms.UpdateBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:path="com.waz.zms" android:scheme="package" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.waz.zms.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.waz.zms" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
